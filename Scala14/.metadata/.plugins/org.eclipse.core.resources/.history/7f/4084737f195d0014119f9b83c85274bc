for( b <- books; a <- b.authors if a startsWith "Bird,")
 	yield b.title                             //> res0: List[String] = List(Introduction to Functional Programming)
 	
 	
 	
for(b <- books; a <- b.authors ) yield (b.title,a)//> res1: List[(String, String)] = List((Structure and Interpretation of Compute
                                                  //| r Programs,Abelson, Harald), (Structure and Interpretation of Computer Progr
